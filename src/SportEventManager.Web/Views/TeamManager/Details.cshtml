@using SportEventManager.Web.ViewModels.TeamModel;
@model TeamViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfPlayers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfPlayers)
        </dd>
    </dl>
</div>
<div class="p-1 mt-4" style="height:50px;">
    <h4>These are team members</h4>
</div>
<div class="container col-12">
    <div class="col-md-12 p-0 m-0 bg-white">
        <table id="PlayersTable" class="table table-sm CodesTable">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Surname
                    </th>
                    <th>
                        Number
                    </th>
                    <th>
                        Pesel
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Player in Model.Players)
                {
                    if (!Player.IsArchived)
                    {
                        <tr>
                            <td class="team-col-colors">
                                @Player.Name
                            </td>
                            <td class="team-col-colors">
                                @Player.Surname
                            </td>
                            <td class="team-col-colors">
                                @Model.TeamPlayers.Find(tp => tp.PlayerId == Player.Id)?.Number
                            </td>
                            <td class="team-col-colors">
                                @Player.Pesel
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>